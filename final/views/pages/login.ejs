<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head") %>
    <link rel="stylesheet" href="css/backgrounds/login-bck.css">
</head>

<body onload="hideElements()">

    <header>
        <!-- Default Header -->
        <nav class="icon">
            <div class="flex-container">
                <a href="/">
                    <h1>AURORA</h1>
                </a>
                <i class="fas fa-bars"></i>
            </div>
        </nav>

        <!-- Hamburger Menu -->
        <nav id="menu">
            <div class="flex-container">
                <h1>Menu</h1>
                <i class="fas fa-times"></i>
            </div>
            <div class="flex-column">
                <a href="/">
                    <h2>Home</h2>
                </a>
                <a href="/login">
                    <h2>Log In</h2>
                </a>
                <a href="/signup">
                    <h2>Sign Up</h2>
                </a>
                <a href="/profile" class="logout-nav">
                    <h2>Profile</h2>
                </a>
                <a href="/settings" class="logout-nav">
                    <h2>Settings</h2>
                </a>
            </div>
        </nav>
    </header>
    <main id="small-main">
        <!-- Page Title -->
        <h2 class="small-title">Welcome Back, Log In</h2>

        <!-- Login form -->
        <div id="form-wrapper" class="flex-container flex-center">
            <form id="login-form" action='/dologin' method='POST'>
                <input type="text" id="lusername" name="name" placeholder="Username">
                <input type="password" id="lpassword" name="password" placeholder="Password">
                <input type="submit" value="Login">
                <!-- Register Link -->
                <p id="form-text">Not got an account? Sign Up <a href="/signup">Here</a></p>
            </form>
        </div>

        <!-- Display Error Msg Here -->
        <p id="login-error"><%= login_error %></p>
    </main>
    <footer class="fixed">
        <%- include("../partials/footer") %>
    </footer>
</body>

</html>
