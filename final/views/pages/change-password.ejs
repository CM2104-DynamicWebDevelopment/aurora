<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head") %>
</head>

<body onload="hideElements()">

    <header>
        <nav class="icon">
            <div class="flex-container">
                <a id="title" href="/">
                    <h1>AURORA</h1>
                </a>
                <i class="fas fa-bars"></i>
            </div>
        </nav>

        <nav id="menu">
            <div class="flex-container">
                <h1>Menu</h1>
                <i class="fas fa-times"></i>
            </div>
            <div class="flex-column">
                <a href="/">
                    <h2>Home</h2>
                </a>
                <a href="/profile">
                    <h2>Profile</h2>
                </a>
                <a href="/settings">
                    <h2>Settings</h2>
                </a>
                <a href="#">
                    <h2 onclick="signout();">Log Out</h2>
                </a>
            </div>
        </nav>
    </header>
    <main id="small-main">
        <!-- Page Title -->
        <h2 class="small-title">Change Password</h2>
        <div class="flex-container flex-center">
            <!-- Password Change Form -->
            <form id="passChange" action="#">
                <input type="password" id="newPwd" name="newpassword" placeholder="New Password">
                <input type="password" id="newPwdConf" name="confirmpassword" placeholder="Confirm Password">
                <input type="submit" value="Set Password" onclick="changePassword()">
            </form>
        </div>
        <!-- Display error msg here -->
        <p id="passchange-error"></p>
    </main>
    <footer class="fixed">
        <%- include("../partials/footer") %>
    </footer>
</body>

</html>
