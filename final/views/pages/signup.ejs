<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head") %>
    <link rel="stylesheet" href="css/backgrounds/signup-bck.css">
</head>

<body onload="hideElements()">

    <header>

        <!-- Default Header -->
        <nav class="icon">
            <div class="flex-container">
                <a href="/">
                    <h1>AURORA</h1>
                </a>
                <span class="fas fa-bars"></span>
            </div>
        </nav>

        <!-- Hamburger Menu -->
        <nav id="menu">
            <div class="flex-container">
                <h1>Menu</h1>
                <span class="fas fa-times"></span>
            </div>
            <div class="flex-column">
                <a href="/">
                    <h2>Home</h2>
                </a>
                <a href="/login">
                    <h2>Log In</h2>
                </a>
                <a href="/signup">
                    <h2>Sign Up</h2>
                </a>
                <a href="/profile" class="logout-nav">
                    <h2>Profile</h2>
                </a>
                <a href="/settings" class="logout-nav">
                    <h2>Settings</h2>
                </a>
            </div>
        </nav>
    </header>
    <main id="small-main">
        <!-- Page Title -->
        <h2 class="small-title">Sign Up</h2>
        <!-- Register form -->
        <div class="flex-container flex-center">
            <form id="myForm">
                <input type="text" id="rusername" name="username" placeholder="Username">
                <label for="rusername">Username</label>
                <input type="email" id="remail" name="email" placeholder="E-Mail Address">
                <label for="remail">Email Address</label>
                <input type="password" id="rpassword" name="password" placeholder="Password">
                <label for="rpassword">Password</label>
                <input type="password" id="rpassConf" name="confirm-password" placeholder="Confirm Password">
                <label for="rpassConf">Confirm Password</label>
                <input type="submit" value="Register" onclick="signUp()">
                <!-- Login Link -->
                <p id="form-text">Already got an account? Log In <a href="/login">Here</a></p>
            </form>
        </div>

        <!-- Display an error msg here -->
        <p id="error-msg"></p>
    </main>
    <footer>
        <%- include("../partials/footer") %>
    </footer>
</body>

</html>
