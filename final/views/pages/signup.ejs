<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head") %>
</head>

<body onload="hideElements()">

    <header>

        <!-- Default Header -->
        <nav class="icon">
            <div class="flex-container">
                <a href="index.html">
                    <h1>AURORA</h1>
                </a>
                <i class="fas fa-bars"></i>
            </div>
        </nav>

        <!-- Hamburger Menu -->
        <nav id="menu">
            <div class="flex-container">
                <h1>Menu</h1>
                <i class="fas fa-times"></i>
            </div>
            <div class="flex-column">
                <a href="index.html">
                    <h2>Home</h2>
                </a>
                <a href="login.html">
                    <h2>Log In</h2>
                </a>
                <a href="signup.html">
                    <h2>Sign Up</h2>
                </a>
                <a href="profile.html" class="logout-nav">
                    <h2>Profile</h2>
                </a>
                <a href="settings.html" class="logout-nav">
                    <h2>Settings</h2>
                </a>
            </div>
        </nav>
    </header>
    <main id="small-main">
        <!-- Page Title -->
        <h2 class="small-title">Sign Up</h2>
        <!-- Register form -->
        <div class="flex-container flex-center">
            <form id="myForm">
                <input type="text" id="rusername" name="username" placeholder="Username">
                <input type="email" id="remail" name="email" placeholder="E-Mail Address">
                <input type="password" id="rpassword" name="password" placeholder="Password">
                <input type="password" id="rpassConf" name="confirm-password" placeholder="Confirm Password">
                <input type="submit" value="Register" onclick="signUp()">
                <!-- Login Link -->
                <p id="form-text">Already got an account? Log In <a href="login.html">Here</a></p>
            </form>
        </div>

        <!-- Display an error msg here -->
        <p id="error-msg"></p>
    </main>
    <footer>
        <p class="footer-txt">RGU 2020 CM2104</p>
    </footer>
</body>

</html>
